    -var document_title = ': Blocks'

block main
    .container
        +heading('h1')(class='heading__h2') Blocks
        p.text
            +link('#album') Album
            |  \ 
            +link('#album-cover') Album cover
            |  \ 
            +link('#article') Article
            |  \ 
            +link('#artist-card') Artist card
            |  \ 
