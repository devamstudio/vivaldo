extends ../_layouts/artist
block header
	- var header = ''
	- var header_back_link = 'index.html'
	include ../_includes/header__artist-shop
block content
	nav.g-breadcrumbs.g-text__center.g-margin__top-3.g-padding__top-5
		ul
			li: a(href="#") Home
			li: a(href="#") Shop
			li: span Item
	// Artist heroscreen
	.b-heroscreen
		.g-container.g-padding__yy-3.g-padding__lg-yy-5
			.g-row
				.g-cols__xs-12.g-cols__lg-5.g-offset__lg-1
					.b-slider.g-block__background-light
						.b-slider_list
							.b-slider_item.active.g-padding__yy-3.g-padding__xx-3
								img.g-image__fluid(src="assets/images/t-shirt.png" alt="item")
							.b-slider_item.g-padding__yy-3.g-padding__xx-3
								img.g-image__fluid(src="assets/images/t-shirt.png" alt="item")
						.b-slider_controls
							.control.pre_slide
								svg.rage: use(xlink:href="#rage-chevron-left")
							.control.next_slide
								svg.rage: use(xlink:href="#rage-chevron-right")
				.g-cols__xs-12.g-cols__lg-5.g-padding__lg-yy-5
					span.g-text__gray T-shirt
					.g-row.g-row__no-inset
						h2.h1: a.g-text__dark(href="shop_item.html") White T-SHIRT<br/> with our print
						h5.h2.g-margin__yy-auto.g-margin__left-auto 5$
					.g-row.g-row__no-inset.g-margin__bottom-3
						label.g-field.g-field__radio.b-field__color-select
							input#color-white(type="radio" name="color")
							span.label(style="background-color:#fefefe;")
						label.g-field.g-field__radio.b-field__color-select
							input#color-orange(type="radio" name="color")
							span.label(style="background-color:orange;")
						label.g-field.g-field__radio.b-field__color-select
							input#color-blue(type="radio" name="color")
							span.label(style="background-color:blue;")
					a.g-button.g-button__primary
						| Buy this
						svg.rage.g-margin__left-2: use(xlink:href="#rage-busket-truck")
	// Artist heroscreen END
